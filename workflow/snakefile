RESULT_COLS = [0, 1]

rule all:
    input:
        expand("test_fires_result_col{col}_hist.png", col = RESULT_COLS)

rule make_data_file:
    input:
        "data/Agrofood_co2_emission.csv"
    output:
        "test_fires_result_col{x}.txt"
    shell:
        "python3 src/print_fires.py --file-name {input} --country-column {wildcards.x} " \
        + "--country 'United States of America' --write-file {output}"

rule plot_data_hist:
    input:
        "test_fires_result_col{x}.txt"
    output:
        "test_fires_result_col{x}_hist.png"
    shell:
        "python3 src/plot_fires.py --file-name {input} --title title " \
        + "--x-label x --y-label y"

